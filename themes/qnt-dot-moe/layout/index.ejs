  <h1 class="text-4xl font-bold mb-4">blog.qnt.moe</h1>

  <div class="flex flex-col">
    <% page.posts.each(function(post){ %>
    <a href="<%= url_for(post.path) %>" class="flex flex-col border-b border-slate-700 pb-4 hover:bg-slate-800 p-2">
      <span class="text-lg font-bold"><%= post.title %></span>
      <span class="text-sm text-slate-400"><%= date(post.date, 'YYYY-MM-DD') %></span>
    </a>
    <% }); %>
  </div>